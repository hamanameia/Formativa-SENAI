@model IEnumerable<Somativa.Models.Produto>

@{
    ViewData["Title"] = "Index";
}

<h1 class="textocima">Produtos</h1>

<p>
    <a asp-action="Create" class="btn adidi rounded-pill">Adicionar</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th class="border-0 d-none d-sm-table-cell"></th>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Estoque)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Preco)
            </th>
            <th class="d-none d-sm-table-cell">
                @Html.DisplayNameFor(model => model.Categoria)
            </th>
            <th class="d-none d-sm-table-cell">
                @Html.DisplayNameFor(model => model.Fornecedor)
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td class="border-0 d-none d-sm-table-cell">
                    <a asp-action="Edit" asp-route-id="@item.ProdutoId" class="text-decoration-none">
                        <svg bootstrap-icon="PencilSquare" width="24" height="24" class="text-dark me-2 my-2"></svg>
                    </a>
                    <a data-bs-toggle="modal" data-bs-target="#ModalTrash-@item.ProdutoId">
                        <svg bootstrap-icon="Trash" width="24" height="24" class="text-dark me-2 my-2"></svg>
                    </a>
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Nome)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Estoque)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Preco)
                </td>
                <td class="d-none d-sm-table-cell">
                    @Html.DisplayFor(modelItem => item.Categoria.Nome)
                </td>
                <td class="d-none d-sm-table-cell">
                    @Html.DisplayFor(modelItem => item.Fornecedor.Nome)
                </td>
            </tr>
            <tr class="d-sm-none w-100 d-flex">
                <td class="col-4 d-flex justify-content-center">
                    <a asp-action="Edit" asp-route-id="@item.ProdutoId">
                        <svg bootstrap-icon="PencilSquare" width="24" height="24" class="text-dark me-2 my-2"></svg>
                    </a>
                </td>
                <td class="col-4 w-100 d-flex justify-content-center">
                    <a data-bs-toggle="modal" data-bs-target="#ModalPlus-@item.ProdutoId">
                        <svg bootstrap-icon="Plus" width="24" height="24" class="text-dark me-2 my-2"></svg>
                    </a>
                </td>
                <td class="col-4 pe-0 d-flex justify-content-center ">
                    <a data-bs-toggle="modal" data-bs-target="#ModalTrash-@item.ProdutoId">
                        <svg bootstrap-icon="Trash" width="24" height="24" class="text-dark me-2 my-2"></svg>
                    </a>
                </td>
            </tr>
            <div class="modal fade" id="ModalTrash-@item.ProdutoId" data-bs-keyboard="false" aria-labelledby="staticBackdropLabel" tabindex="-1" aria-hidden="true">
                <div class="modal-dialog modal-dialog-centered">
                    <div class="modal-content">
                        <div class="modal-header justify-content-center border-0">
                            <h5 class="modal-title text-center volt px-5 py-1 fs">Apagar</h5>
                        </div>
                        <div class="modal-body text-center border-0">
                            <p class="text-dark fs-3 fst-normal">Tem certeza que deseja apagar os dados do @Html.DisplayFor(modelItem => item.Nome)?</p>
                        </div>
                        <div class="modal-footer d-flex justify-content-center border-0">
                            <form asp-action="Delete" asp-route-id="@item.ProdutoId" class="me-5">
                                <input type="hidden" asp-for="@item.ProdutoId" />
                                <button type="submit" class="btn apag text-white">Deletar</button>
                            </form>
                            <button data-bs-dismiss="modal" class="btn volt2 text-white">Cancelar</button>
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal fade" id="ModalPlus-@item.ProdutoId" data-bs-keyboard="false" aria-labelledby="staticBackdropLabel" tabindex="-1" aria-hidden="true">
                <div class="modal-dialog modal-dialog-centered">
                    <div class="modal-content">
                        <div class="modal-header justify-content-center border-0">
                            <h5 class="modal-title text-center volt px-5 py-1 fs">Detalhes</h5>
                        </div>
                        <div class="modal-body text-center border-0">
                            <p class="fw-bold">Nome:</p>
                            <div class="my-2">@Html.DisplayFor(modelItem => item.Nome)</div>
                            <p class="fw-bold">Estoque:</p>
                            <div class="my-2">@Html.DisplayFor(modelItem => item.Estoque)</div>
                            <p class="fw-bold">Preço:</p>
                            <div class="my-2">@Html.DisplayFor(modelItem => item.Preco)</div>
                            <p class="fw-bold">Categoria:</p>
                            <div class="my-2">@Html.DisplayFor(modelItem => item.Categoria.Nome)</div>
                            <p class="fw-bold">Fornecedor:</p>
                            <div class="my-2">@Html.DisplayFor(modelItem => item.Fornecedor.Nome)</div>
                        </div>
                        <div class="modal-footer d-flex justify-content-center border-0">
                            <button data-bs-dismiss="modal" class="btn volt2 text-white">Fechar</button>
                        </div>
                    </div>
                </div>
            </div>
        }
    </tbody>
</table>
