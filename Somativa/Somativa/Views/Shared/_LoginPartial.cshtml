@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

<div class="d-flex align-content-center">
    @if (SignInManager.IsSignedIn(User))
    {
        <div class="dropdown">
            <svg bootstrap-icon="PersonCircle" width="40" height="40" style="margin: 5px 0;" aria-label="Like" data-bs-toggle="dropdown" class="dropdown-toggle text-white  border-1 h-auto mx-2"></svg>
            <ul class="dropdown-menu">
                <li class="mx-2">@User.Identity?.Name!</li>
                <li class="mx-2">
                    <form asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                        <button type="submit" class="btn btn-link text-decoration-none text-dark">Logout</button>
                    </form>
                </li>
            </ul>
        </div>
    }
    else
    {
        <div class="d-flex align-content-center">
            <a class="text-dark text-decoration-none mx-2" asp-area="Identity" asp-page="/Account/Register">Cadastrar</a>
        </div>
        <div class="d-flex align-content-center">
            <a class="text-dark text-decoration-none mx-2" asp-area="Identity" asp-page="/Account/Login">Logar</a>
        </div>
    }
</div>
