@model Somativa.Models.VendaItem

@{
    ViewData["Title"] = "Create";
    var VendaIdAux = ViewData["VendaId"];
}

<div class="row d-flex justify-content-center my-3">
    <div class="rounded conted py-3 col-10 col-sm-6">
        <h4 class="text-center">Adicionar Item da Venda</h4>

        <div class="row d-flex justify-content-center m-2 m-sm-0">
            <div class="col-md-10">
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group" style="display:none">
                        <label asp-for="VendaId" class="control-label textin"></label>
                        <input asp-for="VendaId" value="@VendaIdAux" class="form-control rounded-pill border-1 my-2" readonly />
                    </div>
                    <div class="form-group">
                        <label asp-for="ProdutoId" class="control-label textin"></label>
                        <select asp-for="ProdutoId" class="form-control rounded-pill border-1 my-2" asp-items="ViewBag.ProdutoId"></select>
                    </div>
                    <div class="form-group">
                        <label asp-for="Quantidade" class="control-label textin"></label>
                        <input asp-for="Quantidade" class="form-control rounded-pill border-1 my-2" />
                        <span asp-validation-for="Quantidade" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Unitario" class="control-label textin"></label>
                        <input asp-for="Unitario" type="number" class="form-control rounded-pill border-1 my-2" />
                        <span asp-validation-for="Unitario" class="text-danger"></span>
                    </div>
                    <div class="form-group d-flex justify-content-center">
                        <button type="submit" value="Create" class="adidi rounded-pill me-2 my-2">Cadastrar</button>
                        <a asp-action="Index" asp-route-id="@VendaIdAux" class="btn volt rounded-pill my-2">Cancelar</a>
                    </div>
                </form>
            </div>
        </div>

    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
