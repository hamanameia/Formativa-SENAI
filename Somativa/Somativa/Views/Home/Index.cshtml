@model IEnumerable<Somativa.Models.Produto>
@{
    ViewData["Title"] = "Home Page";
}
<div class="d-flex conted border border-dark border-1 justify-content-center h-auto">
    <div id="carousel" class="carousel w-100 carousel-dark slide" data-bs-ride="carousel">
        <div class="carousel-indicators">
            <button type="button" data-bs-target="#carousel" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
            <button type="button" data-bs-target="#carousel" data-bs-slide-to="1" aria-label="Slide 2"></button>
            <button type="button" data-bs-target="#carousel" data-bs-slide-to="2" aria-label="Slide 3"></button>
        </div>  
        <div class="carousel-inner">
            <div class="carousel-item active" data-bs-interval="5000">
                <img src="~/img/Carro1.png" class="w-100"/>
            </div>
            <div class="carousel-item" data-bs-interval="5000">
                <img src="~/img/Carro2.png" class="w-100" />
            </div>
            <div class="carousel-item" data-bs-interval="5000">
                <img src="~/img/Carro3.png" class="w-100" />
            </div>
        </div>
        <button class="carousel-control-prev" type="button" data-bs-target="#carousel" data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Voltar</span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#carousel" data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Próximo</span>
        </button>
    </div>
</div>
<h1 class="text-center mt-3">Nossos Produtos</h1>
<hr />
<div class="d-flex flex-wrap justify-content-center">
    @foreach (var item in Model)
    {
        <div class="card col-5 col-sm-2 text-bg-dark m-2 border-2">
            <div class="card-body">
                <div class="card-text d-flex flex-column align-items-center">
                    <div class="fw-bold text-center">
                        @item.Nome
                    </div>
                    <div class="textin text-center fs-6">
                        @item.Categoria.Nome
                    </div>
                </div>
                <hr class="border-1" />
                <p class="text-center">R$@item.Preco</p>
            </div>

        </div>
    }
</div>