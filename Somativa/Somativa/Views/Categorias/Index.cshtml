@model IEnumerable<Somativa.Models.Categoria>

@{
    ViewData["Title"] = "Index";
}

<h1 class="textocima">Categorias</h1>

<p>
    <a asp-action="Create" class="btn adidi rounded-pill">Adicionar</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th class="border-0 col-2 d-none d-sm-table-cell"></th>
            <th class="col-10">
                @Html.DisplayNameFor(model => model.Nome)
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td class="border-0 d-none d-sm-table-cell">
                    <a asp-action="Edit" asp-route-id="@item.CategoriaId" class="text-decoration-none">
                        <svg bootstrap-icon="PencilSquare" width="24" height="24" class="text-dark me-2 my-2"></svg>
                    </a>
                    <a data-bs-toggle="modal" data-bs-target="#ModalTrash-@item.CategoriaId">
                        <svg bootstrap-icon="Trash" width="24" height="24" class="text-dark me-2 my-2"></svg>
                    </a>
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Nome)
                </td>
            </tr>
            <tr class="d-sm-none w-100 d-flex ">
                <td class="col-6 justify-content-center d-flex">
                    <a asp-action="Edit" asp-route-id="@item.CategoriaId">
                        <svg bootstrap-icon="PencilSquare" width="24" height="24" class="text-dark me-2 my-2"></svg>
                    </a>
                </td>
                <td class="col-6 pe-0 justify-content-center d-flex">
                    <a data-bs-toggle="modal" data-bs-target="#ModalTrash-@item.CategoriaId">
                        <svg bootstrap-icon="Trash" width="24" height="24" class="text-dark me-2 my-2"></svg>
                    </a>
                </td>
            </tr>
            <div class="modal fade" id="ModalTrash-@item.CategoriaId" data-bs-keyboard="false" aria-labelledby="staticBackdropLabel" tabindex="-1" aria-hidden="true">
                <div class="modal-dialog modal-dialog-centered">
                    <div class="modal-content">
                        <div class="modal-header justify-content-center border-0">
                            <h5 class="modal-title text-center volt px-5 py-1 fs">Apagar</h5>
                        </div>
                        <div class="modal-body text-center border-0">
                            <p class="text-dark fs-3 fst-normal">Tem certeza que deseja apagar os dados da @Html.DisplayFor(modelItem => item.Nome)?</p>
                        </div>
                        <div class="modal-footer d-flex justify-content-center border-0">
                            <form asp-action="Delete" asp-route-id="@item.CategoriaId" class="me-5">
                                <input type="hidden" asp-for="@item.CategoriaId" />
                                <button type="submit" class="btn apag text-white">Deletar</button>
                            </form>
                            <button data-bs-dismiss="modal" class="btn volt2 text-white">Cancelar</button>
                        </div>
                    </div>
                </div>
            </div>
        }
    </tbody>
</table>
